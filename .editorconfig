# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{cpp,c,h,hpp}]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.txt]
insert_final_newline = unset
trim_trailing_whitespace = true
indent_style = unset

[**/CMakeLists.txt]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.js]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.yml]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
