#include ../Makefile.in.Linux
include Makefile.in.MINGW32_NT-5.0 #$(shell uname)
#include ..\Makefile.in.$(shell uname)

CXXFLAGS= $(AGGCXXFLAGS) -L/usr/include/

SRC_CXX=\
graphics.cpp \
logo.cpp \
color.cpp \
image.cpp \
music.cpp \
random.cpp \
egecontrolbase.cpp \
egegapi.cpp \
math.cpp \



SRC_C=\
./lpng/adler32.c \
./lpng/compress.c \
./lpng/crc32.c \
./lpng/deflate.c \
./lpng/gzclose.c \
./lpng/gzlib.c \
./lpng/gzread.c \
./lpng/gzwrite.c \
./lpng/infback.c \
./lpng/inffast.c \
./lpng/inflate.c \
./lpng/inftrees.c \
./lpng/png.c \
./lpng/pngerror.c \
./lpng/pngget.c \
./lpng/pngmem.c \
./lpng/pngpread.c \
./lpng/pngread.c \
./lpng/pngrio.c \
./lpng/pngrtran.c \
./lpng/pngrutil.c \
./lpng/pngset.c \
./lpng/pngtrans.c \
./lpng/pngwio.c \
./lpng/pngwrite.c \
./lpng/pngwtran.c \
./lpng/pngwutil.c \
./lpng/trees.c \
./lpng/uncompr.c \
./lpng/zutil.c \


OBJ=$(SRC_CXX:.cpp=.o) $(SRC_C:.c=.o)

all:	$(OBJ)
	cp .\lib\libgdiplus64.a .\libgraphics64.a
	$(LIB) libgraphics64.a $(OBJ)

clean:
	rm -rf *.o
	rm -rf lpng/*.o
	rm -rf libgraphics64.a

%.o: %.cpp
	$(CXX) -c $(CXXFLAGS) $*.cpp -o $@

%.o: %.c
	$(C) -c $(CXXFLAGS) $*.c -o $@
